{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "sourceMap": true,
    "outDir": "./dist/esm",
    "declaration": true,
    "baseUrl": ".",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictNullChecks": true,
    "composite": true,
    "skipLibCheck": true
  },
  "include": ["./src", "./test", "./swagger", "./typechain-videre"],
  "types": ["reflect-metadata", "swagger-express-ts"]
}
