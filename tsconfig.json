{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "sourceMap": true,
    "outDir": "./dist/cjs",
    "declaration": true,
    "baseUrl": ".",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictNullChecks": true,
    "composite": true,
    "skipLibCheck": true
  },
  "include": [
    "./src",
    "./test",
    "./swagger"
  ],
  "types": [
    "reflect-metadata",
    "swagger-express-ts"
  ]
}
